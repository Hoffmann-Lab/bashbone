#### a NGS bash library mainly designed for gene expression analysis
shipped with useful scripts as well as an optional non-root installer for all required tools
requires bash version 4.4 or above

### quick start
source activate.sh -c false

### setup
# lib only
setup.sh -i bashbone -d $INSDIR [-s /my/overritten/compile/functions.sh]

# all third party tools for direct NGS pipeline design
setup.sh -i all -d $INSDIR [-s /my/overritten/compile/functions.sh]

### activate

source $INSDIR/latest/bashbone/activate.sh

### list function

bashbone

### usage

## oo bash
local x
helper::addmemberfunctions -v x
x.push "hallo"
x.print
x.substring 2 4
x.print
x.replace l u
x.print
...

## commander
# COMMANDER is a requiered, builtin array!

commander::_test

commander::printerr "something went wrong" "$@" {COMMANDER[0]}<<-EOF {COMMANDER[1]}<<-EOF
    dont
    do
EOF
    this
    again
EOF
...

declare -a cmd
for x in {1..100}; do
commander::makecmd -a cmd -s '|' -o $OUTFILE -c {COMMANDER[0]}<<-EOF {COMMANDER[1]}<<-'EOF'
    echo $x
EOF
    perl -e 'print $_'
EOF
...
done

commander::printcmd -a cmd

local threads=10
commander::runcmd -v -b -t $THREADS -a cmd || commander::printerr "failed" 

## fastqc
FASTQ1+=("/path/to/R1.fq")
FASTQ2+=("/path/to/R2.fq")
...
preprocess::fastqc -S false -s false -t $THREADS -o $OUTDIR	-1 FASTQ1 -2 FASTQ2

## go enrichment
ids=()
ids+=(first.list)
ids+=(second.list)
enrichment::go -t $THREADS -l ids -g $GOFILE
#geneid \t goid \t [cellular_component|molecular_function|biological_process]
