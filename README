#### a NGS bash library and tools as well as useful scripts installer
#### requieres bash version 4.4 or above

### setup
# lib only
setup.sh -i bashbone -d $INSDIR [-s /my/overritten/compile/functions.sh]

# all third party tools for direct NGS pipeline design
setup.sh -i all -d $INSDIR [-s /my/overritten/compile/functions.sh]

### usage
## 0) for f in $INSDIR/latest/bashbone/lib/*.sh do source $f; done
configure::environment -i $INSDIR

## 1) from lib/helper.sh
helper::_test

local x
helper::addmemberfunctions -v x
x.push "hallo"
x.print
x.substring 2 4
x.print
x.replace l u
x.print
...

## 2) from lib/commander.sh
# COMMANDER is a requiered, builtin array!

commander::_test

commander::printerr "something went wrong" "$@" {COMMANDER[0]}<<-EOF {COMMANDER[1]}<<-EOF
    dont
    do
EOF
    this
    again
EOF
...

declare -a cmd
for x in {1..100}; do
commander::makecmd -a cmd -s '|' -o $OUTFILE -c {COMMANDER[0]}<<-EOF {COMMANDER[1]}<<-'EOF'
    echo $x
EOF
    perl -e 'print $_'
EOF
...
done

commander::printcmd -a cmd

local threads=10
commander::runcmd -v -b -t $THREADS -a cmd || commander::printerr "failed" 

## 3) from lib/preprocess.sh
FASTQ1+=("/path/to/R1.fq")
FASTQ2+=("/path/to/R2.fq")
...
preprocess::fastqc -S false -s false -t $THREADS -o $OUTDIR	-1 FASTQ1 -2 FASTQ2
# requieres setupped tools - see 0) setup all third party tools
